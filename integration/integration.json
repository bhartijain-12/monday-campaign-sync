[
  {
    "name": "Send webhook with dynamic params when item is created",
    "trigger": {
      "type": "item_created"
    },
    "action": {
      "url": "https://monday-campaign-sync.onrender.com/webhook",
      "method": "post",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": "{\"boardId\": \"{{boardId}}\", \"itemId\": \"{{pulseId}}\", \"userId\": \"{{userId}}\", \"useremail\": \"{{text_mkrbt7mc}}\"}"
    }
  }
]

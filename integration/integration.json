{
  "name": "When an item is created, send board, user, and column via webhook",
  "trigger": {
    "type": "item_created"
  },
  "action": {
    "url": "https://monday-campaign-sync.onrender.com/webhook?boardId={{board}}&itemId={{pulseId}}&userId={{user}}&columnId={{column}}",
    "method": "post",
    "headers": {
      "Content-Type": "application/json"
    }
   
  }
}

[
  {
    "name": "When an item is created, send board, user, and column via webhook",
    "trigger": {
      "type": "item_created"
    },
    "action": {
      "url": "https://monday-campaign-sync.onrender.com/webhook",
      "method": "post",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": "{\"boardId\": \"{{board}}\", \"itemId\": \"{{pulseId}}\", \"userId\": \"{{user}}\", \"columnId\": \"{{column}}\"}",
      "mapping": {
        "board": {
          "type": "board",
          "required": true,
          "label": "Select Board"
        },
        "user": {
          "type": "user",
          "required": true,
          "label": "Select User"
        },
        "column": {
          "type": "column",
          "required": true,
          "label": "Select Column"
        }
      }
    }
  }
]

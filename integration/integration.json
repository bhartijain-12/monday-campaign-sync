[
  {
    "name": "When an item is created, send board, user, column via webhook",
    "trigger": {
      "type": "item_created"
    },
    "action": {
      "url": "https://monday-campaign-sync.onrender.com/webhook?boardId={{boardId}}&itemId={{pulseId}}&userId={{userId}}&useremail={{useremail}}",
      "method": "get",
      "mapping": {
        "userId": {
          "type": "user",
          "required": true,
          "label": "User to send"
        },
        "useremail": {
          "type": "column",
          "required": true,
          "label": "Email Column to send"
        }
      }
    }
  }
]


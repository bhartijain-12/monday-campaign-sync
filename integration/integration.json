[
  {
    "name": "Send webhook with dynamic params when item is created",
    "trigger": {
      "type": "item_created"
    },
    "action": {
      "url": "https://monday-campaign-sync.onrender.com/webhook",
      "method": "post",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": "{\"boardId\": \"{{board}}\", \"itemId\": \"{{item}}\", \"userId\": \"{{user}}\", \"columnId\": \"{{column}}\"}",
      "mapping": {
        "board": {
          "type": "board",
          "required": true,
          "label": "Select Board"
        },
        "item": {
          "type": "item",
          "required": true,
          "label": "Select Item"
        },
        "user": {
          "type": "user",
          "required": true,
          "label": "Select User"
        },
        "column": {
          "type": "column",
          "required": true,
          "label": "Select Column"
        }
      }
    }
  }
]
